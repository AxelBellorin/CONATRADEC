<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--#region Estilos Propios-->

        <!-- Estilo para Border de Imagenes -->

    <Style TargetType="Border" x:Key="BorderStyleImage">
        <Setter Property="Stroke" Value="{StaticResource color_Verde}"/>    <!-- Color del borde -->
        <Setter Property="StrokeThickness" Value="2"/>  <!-- Grosor del borde -->
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="LightGray"/>
        <Setter Property="StrokeShape" Value="Ellipse"/>
    </Style>


    <!-- Estilo para Border de cajas de texto -->
    <Style TargetType="Border" x:Key="BorderStyle">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 15"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="5"/>

        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black"
                        Offset="5,5"
                        Radius="10"
                        Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para Border de cajas de texto sin estilo-->
    <Style TargetType="Border" x:Key="BorderStyleNoBorder">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Padding" Value="20,0"/>
    </Style>

    <!-- Estilo para Border de cajas de texto sin esquinas redondeadas-->
    <Style TargetType="Border" x:Key="BorderStyleNoCornerRadius">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 0"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="20,5,20,5"/>

        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="Black"
                    Offset="5,5"
                    Radius="10"
                    Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para Entry dentro de esas cajas -->
    <Style TargetType="Entry" x:Key="EntryStyle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="TextColor" Value="Black"/>
    </Style>

    <!-- Estilo para Button -->
    <Style TargetType="Button" x:Key="ButtonStyle">
        <Setter Property="BackgroundColor" Value="{StaticResource color_Verde}"/>
        <Setter Property="TextColor" Value="{StaticResource color_Blanco}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="15"/>        
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <!-- Estilo para VerticalStackLayout-->
    <Style TargetType="VerticalStackLayout" x:Key="VerticalStackLayoutStyle">
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Spacing" Value="10"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <!-- Estilo pruebas-->

    <!-- Estilo base -->
    <Style x:Key="ActionButtonBase" TargetType="Button">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="OpenSansSemibold"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GrayDisabled}"/>
                            <Setter Property="TextColor" Value="{StaticResource GrayDisabledText}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Variantes -->
    <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource ActionButtonBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource GreenAdd}"/>
        <Setter Property="SemanticProperties.Hint" Value="Agrega un nuevo registro"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GreenAddPressed}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GreenAdd}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="UpdateButton" TargetType="Button" BasedOn="{StaticResource ActionButtonBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource BlueUpdate}"/>
        <Setter Property="SemanticProperties.Hint" Value="Actualiza el registro"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BlueUpdatePressed}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BlueUpdate}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource ActionButtonBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource RedDelete}"/>
        <Setter Property="SemanticProperties.Hint" Value="Elimina el registro"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource RedDeletePressed}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource RedDelete}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>


    <!-- Variante Cancelar (relleno suave) -->
    <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ActionButtonBase}">
        <Setter Property="BackgroundColor" Value="{StaticResource GrayCancelBg}"/>
        <Setter Property="TextColor" Value="{StaticResource GrayCancelText}"/>
        <Setter Property="BorderColor" Value="{StaticResource GrayCancelBorder}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GrayCancelBgPressed}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GrayCancelBg}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Botón Refrescar -->
    <Style x:Key="RefreshButton"
       BasedOn="{StaticResource ActionButtonBase}"
       TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Color_Refrescar_Normal}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Color_Refrescar_Pressed}"/>
                            <Setter Property="Scale" Value="0.97"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource GrayDisabled}"/>
                            <Setter Property="TextColor" Value="{StaticResource GrayDisabledText}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!--#endregion-->
    
