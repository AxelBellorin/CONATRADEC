<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:controls="clr-namespace:CONATRADEC.Controls">

    <ControlTemplate x:Key="FooterTemplate">
        <Grid RowDefinitions="* , Auto">

            <!-- CONTENIDO -->
            <ContentPresenter BackgroundColor="GhostWhite" Grid.Row="0"/>

            <!-- FOOTER -->
            <ScrollView Grid.Row="1" Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10"
                                       BackgroundColor="{StaticResource color_Blanco}"
                                       Padding="30,10,10,5">

                    <!-- MAIN PAGE -->
                    <controls:PermissionMenuItem Interfaz="MainPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToMainPageCommand}" />
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconhome.png"/>
                        <Label HorizontalOptions="Center" Text="Inicio"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- USER PAGE -->
                    <controls:PermissionMenuItem Interfaz="userPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToUserPageButtonCommand}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconuser.png"/>
                        <Label HorizontalOptions="Center" Text="Usuario"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- ROL PAGE -->
                    <controls:PermissionMenuItem Interfaz="rolPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToRolPageButtonCommand}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconrol.png"/>
                        <Label HorizontalOptions="Center" Text="Rol"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- MATRIZ PERMISOS -->
                    <controls:PermissionMenuItem Interfaz="matrizPermisosPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToMatrizPermisosPageButtonCommad}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconpermission.png"/>
                        <Label HorizontalOptions="Center" Text="Permisos"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- PAIS PAGE -->
                    <controls:PermissionMenuItem Interfaz="paisPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToPaisPageButtonCommand}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconcountry.png"/>
                        <Label HorizontalOptions="Center" Text="Pais"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- ELEMENTOS QUIMICOS -->
                    <controls:PermissionMenuItem Interfaz="elementoQuimicoPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToElementoQuimicoPageButtonCommand}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconchemicalelement.png"/>
                        <Label HorizontalOptions="Center" Text="Elementos"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                    <!-- TERRENO PAGE -->
                    <controls:PermissionMenuItem Interfaz="terrenoPage"
                                                 Spacing="3"
                                                 Margin="0,0,30,0">
                        <controls:PermissionMenuItem.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToTerrenoPageButtonCommand}"/>
                        </controls:PermissionMenuItem.GestureRecognizers>

                        <Image HeightRequest="30" WidthRequest="30" Source="iconland.png"/>
                        <Label HorizontalOptions="Center" Text="Terreno"
                               FontSize="16" TextColor="{StaticResource color_Negro}"
                               FontFamily="MontserratMedium"/>
                    </controls:PermissionMenuItem>

                </HorizontalStackLayout>
            </ScrollView>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>
