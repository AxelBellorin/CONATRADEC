<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ControlTemplate x:Key="FooterTemplate">
        <Grid RowDefinitions="* , Auto">

            <!-- #region contenido de la pagina-->
            <ContentPresenter BackgroundColor="GhostWhite" Grid.Row="0"/>
            <!--#endregion-->

            <!--#region Pie de pagina-->
            <!--Etiqueta de scroll para deslizar los botones-->
            <ScrollView Grid.Row="1" Orientation="Horizontal">
                <!--Etiqueta para que los botones se alineen horizontalmente-->
                <HorizontalStackLayout Spacing="10" BackgroundColor="{StaticResource color_Blanco}" Padding="30,10,10,5">
                    <!--Etiqueta para crear los botones-->
                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToMainPageCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconhome.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Inicio" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToUserPageButtonCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconuser.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Usuario" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToRolPageButtonCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconrol.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Rol" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToMatrizPermisosPageButtonCommad}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconpermission.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Permisos" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToPaisPageButtonCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconcountry.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Pais" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToElementoQuimicoPageButtonCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconchemicalelement.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Elementos" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="3" Margin="0,0,30,0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding goToTerrenoPageButtonCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!--Imagen del boton-->
                        <Image HeightRequest="30" WidthRequest="30"  Source="iconland.png"/>
                        <!--Texto de la opción-->
                        <Label  HorizontalOptions="Center" 
                                Text="Terreno" 
                                FontSize="16" 
                                TextColor="{StaticResource color_Negro}"
                                FontFamily="MontserratMedium"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </ScrollView>
            <!--#endregion-->
        </Grid>
    </ControlTemplate>
</ResourceDictionary>