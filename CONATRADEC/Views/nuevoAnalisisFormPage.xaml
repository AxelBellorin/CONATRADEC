<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.NuevoAnalisisFormPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{OnPlatform WinUI='Transparent', Default={StaticResource color_Blanco}}"
             Title="Nuevo Análisis">

    <ContentView x:Name="UserPage"
                 ControlTemplate="{StaticResource FooterTemplate}">

        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="12">
                <Label Text="Formulario de Análisis de Suelo" FontAttributes="Bold" FontSize="22" />

                <!-- Sección: Detalles generales -->
                <Label Text="Detalles generales" FontAttributes="Bold" FontSize="16" Margin="0,4,0,0" />
                <Frame CornerRadius="8" HasShadow="True" Padding="12" BackgroundColor="WhiteSmoke" Margin="0,6,0,0">
                    <Grid ColumnDefinitions="Auto, *"
                          RowDefinitions="Auto, Auto, Auto"
                          RowSpacing="10"
                          ColumnSpacing="12">

                        <!-- Usuario -->
                        <Frame Grid.Row="0" Grid.Column="0"
                               CornerRadius="24"
                               HeightRequest="48"
                               WidthRequest="48"
                               Padding="0"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               BackgroundColor="#2E86AB" HasShadow="False">
                            <Label Text="JM" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontAttributes="Bold" />
                        </Frame>

                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="2" VerticalOptions="Center">
                            <Label x:Name="UsuarioLabel" Text="Jonathan Martinez" FontAttributes="Bold" FontSize="16" />
                            <Label Text="26martinez.508@gmail.com" TextColor="Gray" FontSize="14" />
                        </VerticalStackLayout>

                        <!-- Laboratorio -->
                        <Label Grid.Row="1" Grid.Column="0" Text="Laboratorio:" VerticalOptions="Center" />
                        <Entry Grid.Row="1" Grid.Column="1" Placeholder="Laboratorio" x:Name="LaboratorioEntry" HorizontalOptions="FillAndExpand" />

                        <!-- Tipo de muestra (estático) -->
                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="16">
                            <VerticalStackLayout Spacing="4" HorizontalOptions="FillAndExpand">
                                <Label Text="Tipo de muestra:" />
                                <Label Text="Suelo" FontAttributes="Bold" FontSize="14" VerticalOptions="Center" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Grid>
                </Frame>

                <!-- Sección: Resultados (una columna, 6 filas) -->
                <Label Text="Resultados del análisis" FontAttributes="Bold" FontSize="16" Margin="0,6,0,0" />
                <Frame CornerRadius="8" HasShadow="True" Padding="12" BackgroundColor="WhiteSmoke" Margin="0,6,0,0">
                    <Grid ColumnDefinitions="*"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                          RowSpacing="12">

                        <!-- Fila 0: pH -->
                        <VerticalStackLayout Grid.Row="0" Spacing="6">
                            <Label Text="pH:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="pHEntry" Keyboard="Numeric" Placeholder="pH" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="pHUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>pH</x:String>
                                        <x:String>sin unidad</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Fila 1: Materia Orgánica -->
                        <VerticalStackLayout Grid.Row="1" Spacing="6">
                            <Label Text="Materia Orgánica:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="MateriaOrganicaEntry" Keyboard="Numeric" Placeholder="%" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="MateriaOrganicaUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>%</x:String>
                                        <x:String>g/kg</x:String>
                                        <x:String>mg/kg</x:String>
                                        <x:String>ppm</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Fila 2: Potasio -->
                        <VerticalStackLayout Grid.Row="2" Spacing="6">
                            <Label Text="Potasio:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="PotasioEntry" Keyboard="Numeric" Placeholder="mg/kg" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="PotasioUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>mg/kg</x:String>
                                        <x:String>ppm</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Fila 3: Fósforo -->
                        <VerticalStackLayout Grid.Row="3" Spacing="6">
                            <Label Text="Fósforo disponible:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="FosforoEntry" Keyboard="Numeric" Placeholder="mg/kg" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="FosforoUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>mg/kg</x:String>
                                        <x:String>ppm</x:String>
                                        <x:String>g/kg</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Fila 4: Calcio -->
                        <VerticalStackLayout Grid.Row="4" Spacing="6">
                            <Label Text="Calcio:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="CalcioEntry" Keyboard="Numeric" Placeholder="mg/kg" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="CalcioUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>mg/kg</x:String>
                                        <x:String>g/kg</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Fila 5: Magnesio -->
                        <VerticalStackLayout Grid.Row="5" Spacing="6">
                            <Label Text="Magnesio:" />
                            <HorizontalStackLayout Spacing="8">
                                <Entry x:Name="MagnesioEntry" Keyboard="Numeric" Placeholder="mg/kg" HorizontalOptions="FillAndExpand" />
                                <Picker x:Name="MagnesioUnitPicker" WidthRequest="110" HorizontalOptions="End" SelectedIndex="0">
                                    <Picker.Items>
                                        <x:String>mg/kg</x:String>
                                        <x:String>g/kg</x:String>
                                    </Picker.Items>
                                </Picker>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </Grid>
                </Frame>

                <Button Text="Enviar Análisis" Clicked="OnGuardarClicked" Margin="0,8,0,20" />

            </VerticalStackLayout>
        </ScrollView>
    </ContentView>
</ContentPage>