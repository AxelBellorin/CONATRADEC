<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.rolPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{OnPlatform WinUI='Transparent', Default={StaticResource color_Blanco}}">

    <ContentView x:Name="RolPage"
                 ControlTemplate="{StaticResource FooterTemplate}">

        <Grid ColumnDefinitions="*"
              RowDefinitions="Auto,auto,*">

            <!-- ENCABEZADO -->
            <Grid ColumnDefinitions="*,auto"
                  Grid.Row="0"
                  Padding="0,10,0,0">

                <Label Text="Rol"
                       FontSize="30"
                       FontFamily="MontserratBold"
                       TextColor="{StaticResource color_Negro}"
                       FontAttributes="Bold"
                       Padding="30,0,0,0" />

                <!-- BOTÃ“N AGREGAR (oculto si no hay permiso) -->
                <ImageButton Source="iconadd.png"
                             WidthRequest="60"
                             HeightRequest="60"
                             CornerRadius="30"
                             Grid.Column="1"
                             Padding="0,0,20,0"
                             Command="{Binding AddCommand}"
                             IsVisible="{Binding CanAdd}" />
            </Grid>

            <!-- LOADER -->
            <ActivityIndicator Grid.Row="1"
                               IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource color_Naranja}" />

            <!-- LISTA -->
            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding List}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label Text="No hay roles para mostrar."
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                </CollectionView.EmptyView>

                <!-- ITEM -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <SwipeView>

                            <!-- ACCIONES SWIPE -->
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">

                                    <!-- EDITAR -->
                                    <SwipeItem Text="Editar"
                                               IconImageSource="iconupdate.png"
                                               BackgroundColor="{StaticResource BlueUpdate}"
                                               Command="{Binding Source={x:Reference RolPage}, Path=BindingContext.EditCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference RolPage}, Path=BindingContext.CanEdit}" />

                                    <!-- ELIMINAR -->
                                    <SwipeItem Text="Eliminar"
                                               IconImageSource="icondelete.png"
                                               BackgroundColor="{StaticResource RedDelete}"
                                               Command="{Binding Source={x:Reference RolPage}, Path=BindingContext.DeleteCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference RolPage}, Path=BindingContext.CanDelete}" />

                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- CUERPO -->
                            <Border Style="{OnPlatform WinUI={StaticResource BorderStyleNoCornerRadius},
                                                    Default={StaticResource BorderStyleNoBorder}}">

                                <Grid Padding="10"
                                      ColumnDefinitions="*">

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={x:Reference RolPage}, Path=BindingContext.ViewCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>

                                    <StackLayout VerticalOptions="Center">
                                        <Label Text="{Binding NombreRol}"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               FontFamily="MontserratBold"
                                               TextColor="{StaticResource color_Negro}" />
                                    </StackLayout>
                                </Grid>
                            </Border>

                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </Grid>

    </ContentView>
</ContentPage>
