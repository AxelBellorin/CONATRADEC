<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CONATRADEC.Views.paisPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="{StaticResource color_Blanco}">

    <ContentView x:Name="PaisPage"
                 ControlTemplate="{StaticResource FooterTemplate}">

        <Grid RowDefinitions="Auto,Auto,*"
              ColumnDefinitions="*">

            <!-- ENCABEZADO -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,Auto"
                  Padding="0,10,0,0">

                <Label Text="País"
                       FontSize="30"
                       FontFamily="MontserratBold"
                       TextColor="{StaticResource color_Negro}"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Padding="30,0,0,0" />

                <!-- AGREGAR -->
                <ImageButton Source="iconadd.png"
                             WidthRequest="60"
                             HeightRequest="60"
                             Grid.Column="1"
                             Background="Transparent"
                             Padding="0,0,20,0"
                             Command="{Binding AddCommand}"
                             IsVisible="{Binding CanAdd}" />
            </Grid>

            <!-- LOADING -->
            <ActivityIndicator Grid.Row="1"
                               IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource color_Naranja}" />

            <!-- LISTA -->
            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding List}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label Text="No hay países para mostrar."
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <SwipeView IsEnabled="{Binding Source={x:Reference PaisPage}, Path=BindingContext.CanView}">
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">

                                    <!-- EDITAR -->
                                    <SwipeItem Text="Editar"
                                               IconImageSource="iconupdate.png"
                                               BackgroundColor="{StaticResource BlueUpdate}"
                                               Command="{Binding Source={x:Reference PaisPage}, Path=BindingContext.EditCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference PaisPage}, Path=BindingContext.CanEdit}" />

                                    <!-- ELIMINAR -->
                                    <SwipeItem Text="Eliminar"
                                               IconImageSource="icondelete.png"
                                               BackgroundColor="{StaticResource RedDelete}"
                                               Command="{Binding Source={x:Reference PaisPage}, Path=BindingContext.DeleteCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference PaisPage}, Path=BindingContext.CanDelete}" />

                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- CONTENIDO -->
                            <Border Style="{StaticResource BorderStyleNoCornerRadius}">

                                <Grid Padding="10"
                                      ColumnDefinitions="Auto,*"
                                      IsEnabled="{Binding Source={x:Reference PaisPage}, Path=BindingContext.CanView}">

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={x:Reference PaisPage}, Path=BindingContext.ViewCommand}"
                                            CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>

                                    <StackLayout Grid.Column="0" Margin="0,0,10,0">
                                        <Label Text="{Binding CodigoISOPais}"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               FontFamily="MontserratBold"
                                               TextColor="{StaticResource color_Verde}" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="1">
                                        <Label Text="{Binding NombrePais}"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               FontFamily="MontserratBold"
                                               TextColor="{StaticResource color_Negro}" />
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentView>
</ContentPage>
