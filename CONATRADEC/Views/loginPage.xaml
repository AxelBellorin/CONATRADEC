<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:login="clr-namespace:CONATRADEC.Views"
             x:Class="CONATRADEC.Views.loginPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">
    <ScrollView>
        <VerticalStackLayout Style="{StaticResource VerticalStackLayoutStyle}">
            <ImageButton    Source="logocontradec.png"
                            BackgroundColor="Transparent"
                            Aspect="AspectFill" 
                            Padding="0"
                            HeightRequest="250"
                            WidthRequest="250"
                            CornerRadius="125">
                <ImageButton.Clip>
                    <!-- recorta 5 px hacia adentro: ajusta RadiusX/Y a gusto -->
                    <EllipseGeometry Center="125,125" RadiusX="100" RadiusY="100"/>
                </ImageButton.Clip>
            </ImageButton>
            <Label 
            Text="ConatraCafé Soil"
            FontSize="40"
            FontFamily="MontserratBold"
            HorizontalOptions="Center" 
            TextColor="{StaticResource color_Negro}"/>

            <Label Text="Iniciar sesión"
               HorizontalOptions="Center"
               TextColor="{StaticResource color_Negro}"
               FontSize="40"
               FontAttributes="Bold"               
               FontFamily="MontserratMedium"
               />

            <Border Style="{StaticResource BorderStyle}">
                <Entry Style="{StaticResource EntryStyle}"
                   Text="{Binding Username}"
                   Placeholder="Correo electronico"                   
                   Keyboard="Email"/>
            </Border>

            <Border Style="{StaticResource BorderStyle}">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry  Grid.Column="0"
                            Style="{StaticResource EntryStyle}"
                            Placeholder="Contraseña" 
                            Text="{Binding Password}"
                            IsPassword="{Binding IsPasswordHidden}"
                            Background="Transparent"/>
                    <ImageButton    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Source="{Binding PasswordToggleIcon}"
                                    Command="{Binding TogglePasswordCommand}"
                                    BackgroundColor="Transparent"
                                    WidthRequest="30"
                                    HeightRequest="30" />
                </Grid>
            </Border>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            
            <Button Style="{StaticResource AddButton}"
                    Text="Iniciar Sesión" 
                    Padding="0,18,0,18"
                    Margin="0,20,0,0"
                    Command="{Binding LoginCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>