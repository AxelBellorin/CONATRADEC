<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             xmlns:login="clr-namespace:CONATRADEC.Views"
             xmlns:viewmodel="clr-namespace:CONATRADEC.ViewModels"
             BackgroundColor="White"
             x:Class="CONATRADEC.Views.loginPage"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" BackgroundColor="White">

        <Image Source="logocontradec.jpg"
               HorizontalOptions="Center"
               HeightRequest="150"
               />
        <Label 
            Text="{x:Static login:loginPage.appName}"
            FontSize="40"
            FontFamily="MontserratBold"
            HorizontalOptions="Center" 
            TextColor="Black"/>
        <Label Text="Iniciar sesión"
               HorizontalOptions="Center"
               TextColor="Black"
               FontSize="40"
               FontAttributes="Bold"               
               FontFamily="MontserratMedium"
               /> 

        <Border Stroke="Transparent"
            StrokeShape="RoundRectangle 15"
            BackgroundColor="White"
            Padding="5"
            Shadow="5,5,10,Black">
            <Entry x:Name="EntryUsuario"
                   Text="{Binding Username}"
                   Placeholder="Correo electronico"                   
                   FontSize="16"
                   FontFamily="OpenSansRegular"
                   Keyboard="Email"
                   TextColor="Black"/>  
        </Border>

        <Border Stroke="Transparent"
                StrokeShape="RoundRectangle 15"
                BackgroundColor="White"
                Padding="5"
                Shadow="5,5,10,Black">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry  Grid.Column="0"
                            Placeholder="Contraseña" 
                            x:Name="contraseña"
                            Text="{Binding Password}"
                            IsPassword="{Binding IsPasswordHidden}"
                            FontSize="16"   
                            FontFamily="OpenSans-Regular"
                            TextColor="Black"/>
                    <ImageButton    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Source="{Binding PasswordToggleIcon}"
                                    Command="{Binding TogglePasswordCommand}"
                                    BackgroundColor="Transparent"
                                    WidthRequest="40"
                                    HeightRequest="40" />
            </Grid>
        </Border>

        <!-- Enlace de recuperar -->
        <Label Text="¿Olvidaste tu contraseña?"
           FontSize="14"
           TextColor="#3B655B"
           HorizontalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
            </Label.GestureRecognizers>
        </Label>

        <Button Text="Iniciar Sesión" 
                BackgroundColor="#3B655B"
                CornerRadius="15"
                TextColor="#FFF5F5"
                FontAttributes="Bold"
                Command="{Binding LoginCommand}"/>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
    </VerticalStackLayout>
</ContentPage>