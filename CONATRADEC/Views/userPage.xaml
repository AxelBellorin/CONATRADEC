<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.userPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{OnPlatform WinUI='Transparent', Default={StaticResource color_Blanco}}">

    <ContentView x:Name="UserPage"
                 ControlTemplate="{StaticResource FooterTemplate}">

        <Grid ColumnDefinitions="*"
              RowDefinitions="Auto,auto,*">

            <!-- ENCABEZADO -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,auto"
                  Padding="0,10,0,0">

                <Label Text="Usuario"
                       FontSize="30"
                       FontFamily="MontserratBold"
                       TextColor="{StaticResource color_Negro}"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Padding="30,0,0,0" />

                <!-- BotÃ³n Agregar protegido -->
                <ImageButton Source="iconadd.png"
                             WidthRequest="60"
                             HeightRequest="60"
                             CornerRadius="30"
                             Grid.Column="1"
                             Padding="0,0,20,0"
                             Command="{Binding AddUserCommand}"
                             IsVisible="{Binding CanAdd}" />
            </Grid>

            <!-- LOADING -->
            <ActivityIndicator Grid.Row="1"
                               IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               Color="{StaticResource color_Naranja}" />

            <!-- LISTA -->
            <CollectionView Grid.Row="2"
                            ItemsSource="{Binding UsersList}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <Grid Padding="20">
                        <Label Text="No hay usuarios para mostrar."
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <SwipeView IsEnabled="{Binding Source={x:Reference UserPage}, Path=BindingContext.CanView}">

                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">

                                    <!-- EDITAR protegido -->
                                    <SwipeItem Text="Editar"
                                               IconImageSource="iconupdate.png"
                                               BackgroundColor="{StaticResource BlueUpdate}"
                                               Command="{Binding Source={x:Reference UserPage}, Path=BindingContext.EditUserCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference UserPage}, Path=BindingContext.CanEdit}" />

                                    <!-- ELIMINAR protegido -->
                                    <SwipeItem Text="Eliminar"
                                               IconImageSource="icondelete.png"
                                               BackgroundColor="{StaticResource RedDelete}"
                                               Command="{Binding Source={x:Reference UserPage}, Path=BindingContext.DeleteUserCommand}"
                                               CommandParameter="{Binding .}"
                                               IsVisible="{Binding Source={x:Reference UserPage}, Path=BindingContext.CanDelete}" />

                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Border Style="{StaticResource BorderStyleNoCornerRadius}">

                                <Grid Padding="10"
                                      ColumnDefinitions="Auto,*"
                                      IsEnabled="{Binding Source={x:Reference UserPage}, Path=BindingContext.CanView}">

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={x:Reference UserPage}, Path=BindingContext.ViewUserCommand}"
                                                              CommandParameter="{Binding .}"
                                                              NumberOfTapsRequired="1" />
                                    </Grid.GestureRecognizers>

                                    <Border Style="{StaticResource BorderStyleImage}"
                                            WidthRequest="65"
                                            HeightRequest="65"
                                            Margin="0,0,10,0">
                                        <Image Source="{Binding UrlImagenUsuario}"
                                               Aspect="AspectFill"
                                               BackgroundColor="Transparent" />
                                    </Border>

                                    <StackLayout Grid.Column="1"
                                                 VerticalOptions="Center">
                                        <Label Text="{Binding NombreCompletoUsuario}"
                                               FontAttributes="Bold"
                                               FontSize="20"
                                               FontFamily="MontserratBold"
                                               TextColor="{StaticResource color_Negro}" />

                                        <Label Text="{Binding CorreoUsuario}"
                                               FontSize="14"
                                               FontFamily="MontserratMedium"
                                               TextColor="{StaticResource color_Negro}" />
                                    </StackLayout>
                                </Grid>
                            </Border>

                        </SwipeView>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentView>
</ContentPage>
