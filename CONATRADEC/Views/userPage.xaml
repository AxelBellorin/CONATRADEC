<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.userPage"
             Shell.NavBarIsVisible="False">
    <ContentView ControlTemplate="{StaticResource HeaderFooterTemplate}">   
        <VerticalStackLayout Style="{StaticResource VerticalStackLayouttyle}">

            <!-- Header con título y botón de agregar -->
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Start">
                <Label Text="Users"
                           FontSize="24"
                           FontAttributes="Bold"
                           VerticalOptions="Start"/>
                <Button Text="+"
                            FontSize="50"
                            BackgroundColor="LightBlue"
                            TextColor="White"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            Grid.Column="1"/>
            </Grid>

            <!-- Lista de usuarios -->
            <CollectionView ItemsSource="{Binding Users}"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Editar"
                                               BackgroundColor="LightBlue" />
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="Red"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Contenido del usuario -->
                            <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                                <Image Source="{Binding Avatar}"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       Aspect="AspectFill"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       Margin="0,0,10,0"/>
                                <StackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Name}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"/>
                                    <Label Text="{Binding Email}" 
                                           FontSize="14"
                                           TextColor="Gray"/>
                                </StackLayout>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        
        </VerticalStackLayout>
    </ContentView>
</ContentPage>