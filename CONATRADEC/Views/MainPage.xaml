<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.MainPage"
             Shell.NavBarIsVisible="False">
    <ContentView ControlTemplate="{StaticResource HeaderFooterTemplate}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Encabezado -->
                <Label Text="Inicio"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black" />

                <!-- Botón Nuevo Análisis -->
                <Button Text="Nuevo Análisis"
                        BackgroundColor="#1D6B42"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="12"
                        HeightRequest="50"
                        HorizontalOptions="Fill"
                        />

                <!-- Último análisis -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Último análisis"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black" />
                        <Label Text="12-mar, 2024"
                               FontSize="14"
                               TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*"
                              Padding="0,5,0,0">
                            <VerticalStackLayout>
                                <Label Text="pH" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="5.8"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="13 %"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <Border Stroke="LightGray"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 15"
                        Shadow="2,2,6,Black"
                        Padding="20"
                        Margin="0">

                    <!-- Contenido -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Último análisis"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black" />
                        <Label Text="12-mar, 2024"
                                FontSize="14"
                                TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*" Padding="0,5,0,0">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="pH" 
                                   FontSize="14"
                                   TextColor="Gray"/>
                                <Label Text="5.8"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                   FontSize="14"
                                   TextColor="Gray"/>
                                <Label Text="13 %"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>


                <!-- Otro análisis -->
                <Frame BackgroundColor="White"
                       CornerRadius="12"
                       HasShadow="True"
                       Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="8 mar, 2024"
                               FontSize="14"
                               TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*"
                              Padding="0,5,0,0">
                            <VerticalStackLayout>
                                <Label Text="pH" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="6.2"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="16 %"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </ContentView>
</ContentPage>