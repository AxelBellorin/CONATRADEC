<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CONATRADEC.Views.MainPage"
             Shell.NavBarIsVisible="False">
    <ContentView ControlTemplate="{StaticResource FooterTemplate}">
        <ScrollView>
            <VerticalStackLayout Style="{StaticResource VerticalStackLayoutStyle}">
                <!-- Encabezado -->
                <Label Text="Inicio"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black" />

                <!-- Botón Nuevo Análisis -->
                <Button Text="Nuevo Análisis"
                        BackgroundColor="{StaticResource color_Verde}"
                        TextColor="White"
                        FontSize="18"
                        Command="{Binding MainPageButtonCommand}"
                        CornerRadius="12"
                        HeightRequest="50"
                        HorizontalOptions="Fill"
                        />

                <!-- Último análisis -->
                <Border Style="{StaticResource BorderStyle}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Último análisis"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black" />
                        <Label Text="12-mar, 2024"
                               FontSize="14"
                               TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*"
                              Padding="0,5,0,0">
                            <VerticalStackLayout>
                                <Label Text="pH" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="5.8"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="13 %"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource BorderStyle}">
                    <!-- Contenido -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Último análisis"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="Black" />
                        <Label Text="12-mar, 2024"
                                FontSize="14"
                                TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*" Padding="0,5,0,0">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="pH" 
                                   FontSize="14"
                                   TextColor="Gray"/>
                                <Label Text="5.8"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                   FontSize="14"
                                   TextColor="Gray"/>
                                <Label Text="13 %"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>


                <!-- Otro análisis -->
                <Border Style="{StaticResource BorderStyle}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="8 mar, 2024"
                               FontSize="14"
                               TextColor="Gray" />

                        <Grid ColumnDefinitions="*,*"
                              Padding="0,5,0,0">
                            <VerticalStackLayout>
                                <Label Text="pH" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="6.2"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="Humedad" 
                                       FontSize="14"
                                       TextColor="Gray"/>
                                <Label Text="16 %"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </ContentView>
</ContentPage>