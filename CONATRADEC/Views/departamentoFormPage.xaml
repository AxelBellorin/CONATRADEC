<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CONATRADEC.Views.departamentoFormPage"
    Shell.NavBarIsVisible="False"
    Background="Transparent">

    <Grid RowDefinitions="auto, *">

        <!-- TÃTULO -->
        <Label
            Text="{Binding Title}"
            TextColor="{StaticResource color_Verde}"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Grid.Row="0"
            Margin="10,20,0,0" />

        <!-- CONTENIDO -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="15">

                <!-- CAMPO NOMBRE -->
                <Border Style="{StaticResource BorderStyle}">
                    <VerticalStackLayout Spacing="5">

                        <Label Text="Nombre del departamento"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="{StaticResource color_Negro}" />

                        <Entry
                            Placeholder="Nombre del departamento"
                            Style="{StaticResource EntryStyle}"
                            Text="{Binding NombreDepartamento}"
                            IsReadOnly="{Binding IsEntryReadOnly}" />

                    </VerticalStackLayout>
                </Border>

                <!-- BOTONES -->
                <Grid ColumnDefinitions="*, *" Margin="10,0,10,0">

                    <!-- GUARDAR -->
                    <Button Text="Guardar"
                            Style="{StaticResource UpdateButton}"
                            Command="{Binding SaveCommand}"
                            IsVisible="{Binding CanSave}"
                            Grid.Column="0" />

                    <!-- CANCELAR -->
                    <Button Text="Cancelar"
                            Style="{StaticResource CancelButton}"
                            Command="{Binding CancelCommand}"
                            Grid.Column="1" />

                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
