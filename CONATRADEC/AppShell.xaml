<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CONATRADEC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CONATRADEC.Views"
    Title="CONATRADEC"
    FlyoutHeaderBehavior="Fixed"
    Shell.TitleColor="White"
    Shell.DisabledColor="Gray"
    Shell.FlyoutBackgroundColor="LightBlue">

    <ShellContent Title="Login"  Route="LoginPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:loginPage}"/>
    <ShellContent Title="MainPage"  Route="MainPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:MainPage}"/>
    <ShellContent Title="UserPage"  Route="UserPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:userPage}"/>
    <ShellContent Title="UserFormPage"  Route="UserFormPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:userFormPage}"/>
    <ShellContent Title="RolPage"  Route="RolPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:rolPage}"/>
    <ShellContent Title="RolFormPage"  Route="RolFormPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:rolFormPage}"/>
    <ShellContent Title="CargoPage"  Route="CargoPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:cargoPage}"/>
    <ShellContent Title="CargoFormPage"  Route="CargoFormPage" FlyoutItemIsVisible="False" ContentTemplate="{DataTemplate views:cargoFormPage}"/>
</Shell>
